    <h1>Raffle#index</h1>
<div class="row" ng-app="Raffler"  ng-controller="RaffleCtrl">

<form ng-submit="addEntry()">
  <input type="text" ng-model="newEntry.name">
  <input type="submit" value="Add">
</form>



 <ul>
  <li ng-repeat="entry in entries">
         {{entry.name}} {{entry.likes}}
     <p>
     <button ng-click="entry.likes=entry.likes+1"> PlusOne! </button>
     <span ng-show="entry.winner" ng-class= "{highlight: entry == lastWinner}"class="winner"> WINNER</span>
     <button ng-click="entry.likes=entry.likes-1"> MinusOne! </button>
  </li>
 </ul>
  <p>
  <button ng-click="drawWinner()"> Draw Winner! </button>
</div>



